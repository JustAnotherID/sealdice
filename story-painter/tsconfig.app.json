{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "tailwind.config.ts",
    "src/**/*",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "hyperparam": ["node_modules/hyperparam/lib/index.d.ts"],
      "~/*": ["src/*"]
    },
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  }
}
